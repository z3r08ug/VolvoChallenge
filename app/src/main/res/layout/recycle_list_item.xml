<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/std_margin">

    <TextView
        android:id="@+id/tvCity"
        android:textSize="@dimen/std_details"
        android:layout_width="@dimen/city_width"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ivDay1"
        android:layout_width="@dimen/std_weather_icon"
        android:layout_height="@dimen/std_weather_icon"
        android:layout_toEndOf="@id/tvCity"/>

    <TextView
        android:id="@+id/tvTemp"
        android:layout_width="@dimen/city_width"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivDay1"
        android:textSize="@dimen/std_details"
        android:padding="@dimen/std_margin" />

</RelativeLayout>